@model PosCtrlModel
@{
    ViewData["Title"] = "Welcome Page";
    Layout = null;
    var loggedInUser = _authService.GetLoggedInUser();
}
<!DOCTYPE html>
<html lang="en">
<!--begin::Head-->
<head>
    <partial name="_HeadImport" />
    <link href="~/css/welcome.css" rel="stylesheet" asp-append-version="true" />
</head>
<!--end::Head-->
<!--begin::Body-->
<body>
    <nav class="navbar navbar-white navbar-expand-lg navbar-white bg-white shadow">
        <div class="container-fluid">
            <div class="d-flex mr-auto">
                <a class="navbar-brand p-0" href="/">
                    <img src="~/assets/media/logo/logo.png" height="50" />
                </a>
                <div class="d-flex align-items-center fs-3">
                    <div class="px-3">Date & Time: <span class="text-primary" id="live-clock"></span></div>
                    <div class="px-3">Location: <span class="text-primary">@Model.P_LocName</span></div>
                    <div class="px-3">Terminal #: <span class="text-primary">@Model.P_PosId</span></div>
                </div>
            </div>
            <div class="d-flex">                
                <div class="topbar-item">
                    <div class="btn btn-icon btn-icon-mobile btn-clean d-flex align-items-center btn-lg px-2 w-auto" id="kt_quick_user_toggle">
                        <span class="text-muted font-weight-bold font-size-base d-none d-md-inline mr-1 me-2">Welcome,</span>
                        <span class="text-dark-50 font-weight-bolder font-size-base d-none d-md-inline mr-3">@loggedInUser.U_Name</span>
                        <span class="symbol symbol-lg-35 symbol-25 symbol-light-success ps-3">
                            <span class="symbol-label font-size-h5 font-weight-bold">S</span>
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </nav>
    <div class="d-flex vh-100 container">
        <div class="row justify-content-center align-self-center w-100">
            <div class="d-flex justify-content-center">
                <div class="p-5">
                    <a class="btn btn-primary hover-scale welcome-card">
                        <div class="btn btn-icon btn-light btn-circle mb-5">
                            <img src="/assets/media/welcome/sales.svg">
                        </div>
                        <div class="d-block fw-semibold text-start">
                            <span class="fw-bold d-block fs-3">Sales</span>
                        </div>
                    </a>
                </div>
                <div class="p-5">
                    <a class="btn btn-primary hover-scale welcome-card">
                        <div class="btn btn-icon btn-light btn-circle mb-5">
                            <img src="/assets/media/welcome/setup.svg">
                        </div>
                        <div class="d-block fw-semibold text-start">
                            <span class="fw-bold d-block fs-3">Setup</span>
                        </div>
                    </a>
                </div>
                <div class="p-5">
                    <a class="btn btn-primary hover-scale welcome-card">
                        <div class="btn btn-icon btn-light btn-circle mb-5">
                            <img src="/assets/media/welcome/spot-sales.svg">
                        </div>
                        <div class="d-block fw-semibold text-start">
                            <span class="fw-bold d-block fs-3">Spot Sales</span>
                        </div>
                    </a>
                </div>
                <div class="p-5">
                    <a class="btn btn-primary hover-scale welcome-card">
                        <div class="btn btn-icon btn-light btn-circle mb-5">
                            <img src="/assets/media/welcome/report.svg">
                        </div>
                        <div class="d-block fw-semibold text-start">
                            <span class="fw-bold d-block fs-3">Report</span>
                        </div>
                    </a>
                </div>
            </div>
            <div class="d-flex justify-content-center">
                <div class="p-5">
                    <a class="btn btn-primary hover-scale welcome-card">
                        <div class="btn btn-icon btn-light btn-circle mb-5">
                            <img src="/assets/media/welcome/shift-end-progress.svg">
                        </div>
                        <div class="d-block fw-semibold text-start">
                            <span class="fw-bold d-block fs-3">Shift End Progress</span>
                        </div>
                    </a>
                </div>
                <div class="p-5">
                    <a class="btn btn-primary hover-scale welcome-card">
                        <div class="btn btn-icon btn-light btn-circle mb-5">
                            <img src="/assets/media/welcome/day-end-process.svg">
                        </div>
                        <div class="d-block fw-semibold text-start">
                            <span class="fw-bold d-block fs-3">Day End Process</span>
                        </div>
                    </a>
                </div>
                <div class="p-5">
                    <a asp-action="LogOut" asp-controller="Account" class="btn btn-primary hover-scale welcome-card">
                        <div class="btn btn-icon btn-light btn-circle mb-5">
                            <img src="/assets/media/welcome/exit.svg">
                        </div>
                        <div class="d-block fw-semibold text-start">
                            <span class="fw-bold d-block fs-3">Exit</span>
                        </div>
                    </a>
                </div>
            </div>
        </div>
    </div>
    <!--begin::Javascript-->
    <partial name="_ScriptImport" />
    <!--end::Javascript-->
</body>
</html>