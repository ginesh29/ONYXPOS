@model LoginModel
@{
    Layout = null;
    ViewData["Title"] = "Login";
}
<!DOCTYPE html>
<html lang="en">
<!--begin::Head-->
<head>
    <base href="/">
    <title>Onyx POS - @ViewData["Title"]</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="shortcut icon" href="assets/media/logos/favicon.ico" />
    <!--begin::Fonts(mandatory for all pages)-->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Inter:300,400,500,600,700" />
    <!--end::Fonts-->
    <!--begin::Global Stylesheets Bundle(mandatory for all pages)-->
    <link href="~/assets/plugins/global/plugins.bundle.css" rel="stylesheet" type="text/css" />
    <link href="~/assets/css/style.bundle.css" rel="stylesheet" type="text/css" />
    <link href="~/lib/virtual-keyboard/css/keyboard.min.css" rel="stylesheet" />
    <link href="~/lib/virtual-keyboard/css/keyboard-basic.min.css" rel="stylesheet" />
    <link href="~/css/login.css" rel="stylesheet" asp-append-version="true" />
    <!--end::Global Stylesheets Bundle-->
</head>
<!--end::Head-->
<!--begin::Body-->
<body id="kt_body" class="app-blank bgi-size-cover bgi-attachment-fixed bgi-position-center bgi-no-repeat">
    <!--begin::Root-->
    <div class="d-flex flex-column flex-root" id="kt_app_root">
        <div class="d-flex flex-column-fluid flex-lg-row-auto justify-content-center justify-content-lg-end p-12 p-lg-20">
            <!--begin::Card-->
            <div class="d-flex flex-column align-items-stretch flex-center rounded-4 w-md-500px p-5 login-card mx-auto">
                <!--begin::Wrapper-->
                <div class="d-flex flex-center flex-column flex-column-fluid px-lg-10 pb-15 pb-lg-20">
                    <!--begin::Form-->
                    <form class="form w-100" id="login_frm">
                        <input type="hidden" id="returnUrl" value="@Context.Request.Query["returnUrl"]" />
                        <!--begin::Heading-->
                        <div class="mb-11 text-center">
                            <img src="~/assets/media/logo/logo.png" style="height:120px" />
                            <!--begin::Title-->
                            <h1 class="text-white fw-bolder mb-3">Welcome Back</h1>
                            <!--end::Title-->
                            <!--begin::Subtitle-->
                            <div class="text-white fw-semibold fs-6">Login to POS</div>
                            <!--end::Subtitle=-->
                        </div>
                        <!--begin::Heading-->
                        <div class="mb-5">
                            <div class="input-group">
                                <span class="input-group-text border-right-0 bg-transparent"><i class="fa-solid fa-user fs-4"></i></span>
                                <input type="text" placeholder="User Id" asp-for="UserId" autocomplete="off" class="form-control form-control-lg keyboard-input bg-transparent" />
                            </div>
                            <span asp-validation-for="UserId" class="text-danger"></span>
                        </div>
                        <div class="mb-10">
                            <div class="input-group">
                                <span class="input-group-text border-right-0 bg-transparent" id="basic-addon1"><i class="fa-solid fa-lock fs-4"></i></span>
                                <input type="password" placeholder="Password" asp-for="Password" autocomplete="off" class="form-control form-control-lg keyboard-input bg-transparent" />
                                <span class="input-group-text btn-eye bg-transparent">
                                    <button type="button" class="btn p-0" onclick="showHidePasswordAsterisk('Password', this)">
                                        <i class="fa-regular fa-eye eye-icon fs-4"></i>
                                    </button>
                                </span>
                            </div>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        
                        <!--begin::Submit button-->
                        <div class="d-flex justify-content-between">
                            <button type="button" id="kt_sign_in_submit" class="btn btn-primary" style="width:85%" onclick="loginUser(this)">
                                <!--begin::Indicator label-->
                                <span class="indicator-label">Log In</span>
                                <!--end::Indicator label-->
                                <!--begin::Indicator progress-->
                                <span class="indicator-progress">
                                    Please wait...
                                    <span class="spinner-border spinner-border-sm ms-2 align-middle"></span>
                                </span>
                                <!--end::Indicator progress-->
                            </button>
                            <button class="btn btn-icon btn-primary btn-circle ml-2">
                                <img src="~/assets/media/login/fingerprint 1.png" height="25px" />
                            </button>
                        </div>
                        <!--end::Submit button-->
                    </form>
                    <!--end::Form-->
                </div>
                <!--end::Wrapper-->               
            </div>
            <!--end::Card-->
        </div>
        <!--end::Authentication - Sign-in-->
    </div>
    <!--end::Root-->
    <!--begin::Javascript-->
    <script>var hostUrl = "assets/";</script>
    <!--begin::Global Javascript Bundle(mandatory for all pages)-->
    <script src="~/assets/plugins/global/plugins.bundle.js"></script>
    <script src="~/assets/js/scripts.bundle.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/lib/virtual-keyboard/js/jquery.keyboard.min.js"></script>
    <script src="~/lib/virtual-keyboard/js/jquery.keyboard.extension-all.min.js"></script>
    <!--end::Global Javascript Bundle-->
    <script src="~/js/site.js"></script>
    <script src="~/js/page/login.js" asp-append-version="true"></script>
    <!--end::Javascript-->
</body>
<!--end::Body-->
</html>