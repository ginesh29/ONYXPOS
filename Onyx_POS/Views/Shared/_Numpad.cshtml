@{
    var numpadFor = ViewData["NumpadFor"];
}
<div class="d-flex align-items-center">
    <div class="w-300px">
        <div class="d-flex">
            <div class="col-4"><button class="btn btn-light keypad-button">1</button></div>
            <div class="col-4"><button class="btn btn-light keypad-button">2</button></div>
            <div class="col-4"><button class="btn btn-light keypad-button">3</button></div>
        </div>
        <div class="d-flex">
            <div class="col-4"><button class="btn btn-light keypad-button">4</button></div>
            <div class="col-4"><button class="btn btn-light keypad-button">5</button></div>
            <div class="col-4"><button class="btn btn-light keypad-button">6</button></div>
        </div>
        <div class="d-flex">
            <div class="col-4"><button class="btn btn-light keypad-button">7</button></div>
            <div class="col-4"><button class="btn btn-light keypad-button">8</button></div>
            <div class="col-4"><button class="btn btn-light keypad-button">9</button></div>
        </div>
        <div class="d-flex">
            <div class="col-4"><button class="btn btn-light keypad-button">0</button></div>
            <div class="col-4"><button class="btn btn-light keypad-button">00</button></div>
            <div class="col-4"><button class="btn btn-light keypad-button">.</button></div>
        </div>
    </div>
    <div class="flex-column mx-5">
        <button class="btn btn-light keypad-button keypad-button-wide mb-2" data-key="clear">Clear</button>
        <button class="btn btn-light keypad-button keypad-button-wide mb-2" data-key="backspace"><img src="~/assets/media/kb-icon/backspace.svg" /></button>
        <button class="btn btn-primary keypad-button keypad-button-wide mb-2" onclick="onEnter('@numpadFor')"><img src="~/assets/media/kb-icon/enter.png" height="30px" /></button>
    </div>
</div>
<style>
    .keypad-button {
        width: 100%;
        height: 50px;
        font-size: 20px;
        border: 1px solid #FFF !important;
        border-radius: 0 !important;
        font-weight: normal;
    }

    .keypad-button-wide {
        height: 62px !important;
    }
</style>